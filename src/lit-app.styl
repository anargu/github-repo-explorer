@import './theme.styl'

:host
    font-family: primaryFont
    background-image: color5 
    display block
    min-height: 100vh
.page-container
    max-width: 900px
    margin-left: auto
    margin-right: auto
    // margin-top: 157px
    padding-top: 52px
@media screen and (max-width: 1023px)
    .page-container
        margin-top: 52px
        // margin-top 157px
        margin-left 12px
        margin-right 12px


file-explorer
    position fixed
    z-index 1
    top 0
    left 0
    bottom 0

.offline-mode
    position absolute
    top 0
    left 0
    width 100%
    height 92px
    background alertBackgroundColor
    color: lightTextColor
    font-size: 20px
    text-align: center
    z-index: 2
    line-height: 92px